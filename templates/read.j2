{% block content %}
    <div class="content-section"><b>User List</b></div>
    <table  class="table" style="margin-left: 20px; border:2px solid black;">
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Institution</th>
            <th colspan="2" style="text-align: center">Action</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user.username|e }}</td>
            <td>{{ user.password|e }}</td>
            <td>{{ user.email|e }}</td>
            <td>{{ user.institution|e }}</td>
            <td><a href="/delete?id={{ user.id }}">DELETE</a>   {# this create a link to the "delete" function with an argument for the user id taken by the 'GET' method.#}
            <td><a href="/update?id={{ user.id }}">UPDATE</a>   {# this create a link to the "upda◊êe" function with an argument for the user id taken by the 'GET' method.#}
        </tr>
    {% endfor %}
    </table>

{% endblock content %}