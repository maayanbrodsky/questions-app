{% extends "base.j2" %}
{% block header %}
{#    <span class="content-section">About Page</span>#}
{% endblock header %}
{% block content %}
<h2 class="content-section" >Update</h2>
    # the action argument needs to be the same as the page and the method needs to be POST
    <form class="content-section" action="/update", method="POST">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" value="{{ user.username|e }}">
        <label for="password">Password:</label>
        <input type="text" name="password" id="password" value="{{ user.password|e }}">
        <label for="email">email:</label>
        <input type="text" name="email" id="email" value="{{ user.email|e }}">
        <label for="institution">Institution:</label>
        <input type="text" name="institution" id="institution" value="{{ user.institution|e }}">
        <input type="hidden" name="id" value="{{ user.id }}" />
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
{% endblock content %}